---
const { label, selected = false } = Astro.props as { label: string; selected?: boolean };
---
<button
  class={`rounded-full border px-3 py-1 text-sm transition-colors ${
    selected
      ? 'border-indigo-500 bg-indigo-50 text-indigo-700'
      : 'border-slate-300 bg-white text-slate-800 hover:border-indigo-200 hover:bg-indigo-50'
  }`}
  data-tag
  data-value={label}
>
  {label}
</button>
